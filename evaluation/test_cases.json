          "difficulty": "easy"
        },
        {
          "id": "edge_002",
          "query": "!@#$%^&*()",
          "expected_behavior": "处理特殊字符",
          "difficulty": "easy"
        },
        {
          "id": "edge_003",
          "query": "a".repeat(1000),
          "expected_behavior": "处理超长输入",
          "difficulty": "medium"
        }
      ]
    },
    "multilingual": {
      "description": "多语言支持测试",
      "priority": "low",
      "test_cases": [
        {
          "id": "lang_001",
          "query": "Hello, how are you?",
          "expected_keywords": ["hello", "hi", "fine"],
          "expected_behavior": "理解并回应英文",
          "difficulty": "easy"
        },
        {
          "id": "lang_002",
          "query": "Bonjour, comment allez-vous?",
          "expected_behavior": "识别法语并尝试回应",
          "difficulty": "medium"
        }
      ]
    }
  },
